generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




model User {
  id        String      @id @default(uuid()) @db.Uuid
  username  String   @unique
  password  String

  rootFolderId  String  @unique
  rootFolder    Folder   @relation("UserRootFolder", fields: [rootFolderId], references: [id])
}

model Folder {
  id       String      @id @default(uuid()) @db.Uuid
  name     String

  parentFolderID  String?
  parentFolder    Folder?   @relation("FolderToFolder", fields: [parentFolderID], references: [id])
  subFolders      Folder[]  @relation("FolderToFolder")

  owner   User?   @relation("UserRootFolder")

  files    Files[]
}


model Files {
  id         String      @id @default(uuid()) @db.Uuid
  filename   String   @unique
  filesize   Int
  filetype   String
  uploadedAt DateTime @default(now())

  parentFolderId  String
  parentFolder          Folder   @relation(fields: [parentFolderId], references: [id])
}
